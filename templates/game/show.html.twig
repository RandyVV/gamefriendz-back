{% extends 'base.html.twig' %}

{% block title %}Fiche jeu{% endblock %}

{% block body %}
<div class="PageGameinfo">
    <h1 class="Pageh1">{{ game.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Mode multijoueur</th>
                <td>{{ game.hasMultiplayerMode ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td> <img src={{ game.picture }}></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_backoffice_game_index') }}">Retour Ã  la liste des jeux</a>

    <a class="btn btn-primary" href="{{ path('app_backoffice_game_edit', {'id': game.id}) }}">Modifier</a>

    <h2 class="btn btn-primary">{{ include('game/_delete_form.html.twig') }}</h2>
</div>
{% endblock %}
