{% extends 'base.html.twig' %}

{% block title %}Jeux
{% endblock %}

{% block body %}
	<div class="container PageGames">
		<div class="text-center">
			<h1 class="display-4 mb-4" style="color: #007bff; font-weight: bold; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Jeux</h1>
		</div>

		<a class="footer btn btn-primary" href="{{ path('app_backoffice_main') }}">Retour au menu</a>
		<a class="footer btn btn-primary" href="{{ path('app_backoffice_game_new') }}">Ajouter un jeu</a>

		<table class="table table-striped">
			<thead>
				<tr>
					<th class="text-center">id</th>
					<th class="text-center">Titre</th>
					<th class="text-center">Description</th>
					<th class="text-center">Mode multijoueur</th>
					<th class="text-center">photo</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for game in pagination %}
					<tr>
						<td class="text-center">{{ game.id }}</td>
						<td class="text-center">{{ game.title }}</td>
						<td class="text-center">{{ game.description }}</td>
						<td class="text-center">{{ game.hasMultiplayerMode ? 'oui' : 'non' }}</td>
						<td class="text-center">
							<img src={{ game.picture }}></td>
						<td class="text-center">
							<a class="btn btn-primary" href="{{ path('app_backoffice_game_show', {'id': game.id}) }}">En voir plus</a>
							<a class="btn btn-secondary" href="{{ path('app_backoffice_game_edit', {'id': game.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6" class="text-center">Biblioth√®que de jeux video,
						</td>
						<a href="{{ path('app_backoffice_game_new') }}">ajoute-en !</a>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="footer btn btn-primary" href="{{ path('app_backoffice_main') }}">Retour au menu</a>
	</div>

	<div class="d-flex justify-content-center mt-4">
		<nav aria-label="Page navigation">
			<ul class="pagination">
				{% for i in 1..pagination.pageCount %}
					<li class="page-item{% if i == pagination.currentPageNumber %} active{% endif %}">
						<a class="page-link" href="{{ path('app_backoffice_game_index', {'page': i}) }}">{{ i }}</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
	</div>

{% endblock %}
