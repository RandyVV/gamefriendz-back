<form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn btn-danger" type="submit">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
