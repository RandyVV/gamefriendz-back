{% extends 'base.html.twig' %}

{% block title %}Conversations{% endblock %}

{% block body %}

    <h1>Conversations</h1>

    <ul>
        {% for conversation in conversations %}
            <li>
                <a href="{{ path('conversation_show', {'id': conversation.id}) }}">
                    Conversation #{{ conversation.id }}
                </a>
            </li>
        {% else %}
            <li>No conversations found.</li>
        {% endfor %}
    </ul>
    
{% endblock %}
